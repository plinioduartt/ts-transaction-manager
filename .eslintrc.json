{
  "extends": "standard-with-typescript",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/eslint-disable accessor-pairs": "off",
    "@typescript-eslint/space-before-function-paren": "off",

    "no-tabs": [
      "error",
      {
        "allowIndentationTabs": true
      }
    ]
  }
}
