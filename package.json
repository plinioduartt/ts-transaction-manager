{
  "name": "ts-transaction-manager",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc -p ./tsconfig.json",
    "dev": "tsc --watch",
    "typecheck": "npx tsc .js,.ts . --noEmit",
    "lint": "npx eslint --ext .js,.ts . --fix",
    "format": "npx prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "npx jest --passWithNoTests  --runInBand --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "test:staged": "npm test -- --findRelatedTests --watchAll=false",
    "test:pre-push": "npm test -- --silent --coverage",
    "validate": "npm run format && npm run lint && npm run test:pre-push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plinioduartt/ts-transaction-manager.git"
  },
  "keywords": [
    "transaction",
    "transactions",
    "typeorm",
    "node",
    "typescript"
  ],
  "author": "plinioduartt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/plinioduartt/ts-transaction-manager/issues"
  },
  "homepage": "https://github.com/plinioduartt/ts-transaction-manager#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^4.3.8",
    "jest": "^28.1.3",
    "jest-ts-auto-mock": "^2.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.8.4",
    "rimraf": "3.0.2",
    "ts-auto-mock": "^3.6.4",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "typeorm": "^0.3.12"
  }
}
